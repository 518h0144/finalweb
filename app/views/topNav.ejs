<!-- model đổi mật khẩu -->
<div id="change-password" class="modal fade" >
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h3 class="modal-title">Thay đổi mật khẩu</h3>
        <button class="close" type="button"  data-dismiss="modal"> &times; </button>
      </div>
      <form action="/user/changepassword" method="post">

        <div class="modal-body">
          <div class="form-group">
            <label for="pwd">Mật khẩu mới:</label>
            <input type="password" class="form-control" id="pwd" name="newPassword" />
          </div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Xác nhận đổi mật khẩu</button>
        </div>
      </form>
    </div>
  </div>
</div>

<nav class="navbar navbar-expand-lg navbar-light fixed-top justify-content-between " style="background-color: #e3f2fd;">
  <a class="navbar-brand" href="/">TDTU SOCIAL</a>

  <ul class="navbar-nav">
    <li class="nav-item active">
      <a class="nav-link" href="/"><i class="fas fa-home
            <%if(typeof
            target!='undefined'&&target=='home'){%>text-primary<%}%>"></i> Trang Chủ</a
      >
    </li>
    <%if (user.role=='admin'){%>
    <li class=" nav-item">
          <a class="nav-link" href="/admin">
            <i class="
            fas fa-users-cog
            <%if(typeof target!='undefined'&&target=='admin'){%>text-primary<%}%>">
            </i> Quản lí tài khoản
          </a>
    </li>
    <%}%>
  </ul>
  <div class=" d-flex">
    <a  class="navbar-brand"
        href="/user?id=<%=user._id%>">
      <img alt="Logo"
        src="<%=user.avatar %>"
        class="rounded-circle"
        width="35" height="35" />
        <span><b><%=user.name%></b></span>
    </a>
    <div class="dropleft pt-2 pr-3">
      <span data-toggle="dropdown"><i class="fas fa-sort-down pointer"></i></span>
      <div class="dropdown-menu">
        <%if(user.role!='student'){%>
          <button
            class="dropdown-item"
            data-toggle="modal"
            data-target="#change-password">
            Đổi mật khẩu
          </button>
        <%}%>
        <a
          class="dropdown-item"
          href="/user/logout">Đăng xuất
        </a>
      </div>
    </div>
  </div>
</nav>
